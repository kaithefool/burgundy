{
  "name": "burgundy",
  "version": "0.1.2",
  "description": "",
  "main": "server/bin/www",
  "scripts": {
    "start": "npm run setup && run-p dev-server dev-assets",
    "dev-server": "cd server && npm run dev",
    "dev-assets": "cd assets && npm run dev",
    "ci-server": "cd server && npm ci",
    "ci-assets": "cd assets && npm ci",
    "build": "ci-server && ci-assets && cd assets && npm run build",
    "sh": "docker exec -it burgundy_server_1 sh",
    "db": "docker exec -it burgundy_db_1 sh",
    "setup": "if [ ! -f private/.env ]; then mkdir -p private && cp example.env private/.env; fi",
    "postversion": "git push && git push --tags",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kaithefool/burgundy.git"
